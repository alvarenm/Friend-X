<div class = "external">
  <div class = 'card'>
  <div class = 'col-sm-1'>
    <%= toastr_flash %>
    <div class = 'card-title'>
      <h3>Fa√ßa seu cadastro no Amigo X</h3>
    </div>
    <div class = 'card-content'>
      <div class = 'register-form'>
        <%= form_with url: user_registration_path, method: :post do |f|%>
          <div class = 'email-input'>
            <%= f.label :email, "Email"%>
            <%=f.text_field :email %>
          </div>
          <div class = 'name-input'>
            <%= f.label :name, "Nome"%>
            <%=f.text_field :name %>
          </div>
          <div class = 'password-input'>
            <%= f.label :password, "Senha"%>
            <%=f.password_field :password%>
          </div>
          <div class = 'form-button'>
            <%=f.submit 'Enviar'%>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>

<style>
.external{
  background-color: Black;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
}
.card {
  /* Add shadows to create the "card" effect */
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: sans-serif;
  border-radius: 20px;
  background-color: #29df57;
}
.card-title{
  justify-content: center;
  align-items: center;
  display: flex;
  padding-top: 10vh;
}
.card-content{
  justify-content: center;
  align-items: center;
  display: absolute;
  padding: 10vh;
}
.login-button{
  justify-content: end;
  display: flex;
}

</style>
