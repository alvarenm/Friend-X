<div class = "external">
  <div class = 'card'>
    <%= toastr_flash %>
    <div class = 'container'>
      <div class = 'card-title'>
        <h3>Fa√ßa seu login no Amigo X</h3>
      </div>
    <div class = 'card-content'>
      <div class = 'form-login'>
        <%= form_with url: user_session_path, method: :post do |f|%>
        <div class = 'email-input'>
          <%= f.label :email, "Email"%>
          <%=f.email_field :email, required: true %>
        </div>
        <br></br>
        <div class = 'password-input'>
          <%= f.label :password, "Senha"%>
          <%=f.password_field :password, required: true %>
        </div>
        <br></br>
        <div class = 'buttons'>
        <div class = 'login-button'>
        <%= f.submit 'Login'%>
        </div>
      <% end %>
      <br></br>
      <div class = register-button>
        <%= button_to "Cadastre-se", show_register_modal_path , :method => :get%>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<style>
.external{
  background-color: Black;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
}
.card {
  /* Add shadows to create the "card" effect */
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: sans-serif;
  border-radius: 20px;
  background-color: #29df57;
}
.card-title{
  justify-content: center;
  align-items: center;
  display: flex;
  padding-top: 10vh;
}
.card-content{
  justify-content: center;
  align-items: center;
  display: absolute;
  padding: 10vh;
}
.login-button{
  justify-content: center;
  display: flex;
}
.register-button{
  justify-content: center;
  display: flex;
}
.form-login{
  padding-left: 52vh;
  display: flex;
}
</style>